{
    "$defs":{
        "response":{
            "type":"object",
            "title":"Question_Response",
            "properties":{
                "question_type":{"type":"string","enum":["text","scale","boolean","options","radio"]},
                "question":{"type":"string"},
                "scale":{"type":"number"},
                "response":{"type":"string"},
                "follow_up_entries":{
                    "type":"array",
                    "items":{"$ref": "#/$defs/response" }
                }
            }
        }
    },
    "$id":"https://raw.githubusercontent.com/PostOpPal/Schemas/master/FormService/responses/entry_response.json",
    "title": "Entry_Response",
    "description": "Response to a request for a form entry",
    "type":"object",
    "properties":{
        "date":{"type":"string"},
        "id":{"type":"string"},
        "doctor_responses":{
            "type":"array",
            "items":{
                "type":"object",
                "title":"Doctor_Question_Response",
                "properties":{
                    "question":{"type":"string"},
                    "response":{"type":"string"}
                }
            }
        },
        "standard_responses":{
            "type":"array",
            "items":{"$ref": "#/$defs/response" }
        },
        "qb_responses":{
            "type":"array",
            "items":{"$ref": "#/$defs/response" }
        },
        "syptom_responses":{
            "type":"array",
            "items":{
                "type":"object",
                "title":"Symptom_Tile_Response",
                "properties":{
                    "title":{"type":"string"},
                    "description":{"type":"string"},
                    "result":{"type":"boolean"},
                    "follow_up_responses":{
                        "type":"array",
                        "items":{"$ref": "#/$defs/response" }
                    }
                }
            }
        }
    },
    "required": ["date","doctor_responses","standard_responses","qb_responses"]
}
